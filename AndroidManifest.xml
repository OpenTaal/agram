      android:name="us.achromaticmetaphor.agram.MainActivity"
      android:label="@string/app_name" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="us.achromaticmetaphor.agram.About"
      android:label="@string/app_name" >
    </activity>
    <activity
      android:name="us.achromaticmetaphor.agram.AboutText"
      android:label="@string/app_name" >
    </activity>
    <activity
      android:name="us.achromaticmetaphor.agram.AnagramActivity"
      android:label="@string/app_name" >
    </activity>
  </application>

</manifest>
